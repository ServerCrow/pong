{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app.main:app", "--reload", "--port", "8000"],
      "jinja": true,
      "justMyCode": true,
      "env": {
        "PYDEVD_DISABLE_FILE_VALIDATION": "1"
      }
    },
    {
      "name": "Migrate",
      "type": "debugpy",
      "request": "launch",
      "module": "alembic",
      "args": ["upgrade", "head"],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Make Migrations",
      "type": "debugpy",
      "request": "launch",
      "module": "alembic",
      "args": ["revision", "--autogenerate"],
      "jinja": true,
      "justMyCode": true
    }
  ]
}
